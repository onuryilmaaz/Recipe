{
  "openapi": "3.0.0",
  "info": {
    "title": "Yemek Tarifi API (Kapsamlı)",
    "version": "1.0.0",
    "description": "Tüm controller'ları içeren, tam kapsamlı ve güncel REST API dokümantasyonu."
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Lokal Geliştirme Sunucusu"
    }
  ],
  "tags": [
    {
      "name": "Authentication",
      "description": "Kullanıcı Kayıt ve Giriş İşlemleri"
    },
    { "name": "Recipes", "description": "Tarif Yönetimi" },
    { "name": "Comments", "description": "Yorum Yönetimi" },
    { "name": "AI", "description": "Yapay Zeka Destekli Tarif İşlemleri" },
    { "name": "Dashboard", "description": "Yönetim Paneli Verileri" }
  ],
  "paths": {
    "/api/auth/register": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Yeni kullanıcı kaydı oluşturur",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserRegisterPayload" }
            }
          }
        },
        "responses": {
          "201": { "description": "Kullanıcı oluşturuldu" },
          "400": { "description": "Kullanıcı zaten mevcut" }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Kullanıcı girişi yapar",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserLoginPayload" }
            }
          }
        },
        "responses": {
          "200": { "description": "Giriş başarılı" },
          "500": { "description": "Geçersiz kimlik bilgileri" }
        }
      }
    },
    "/api/auth/profile": {
      "get": {
        "tags": ["Authentication"],
        "summary": "Giriş yapmış kullanıcının profilini getirir",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Kullanıcı profili" },
          "404": { "description": "Kullanıcı bulunamadı" }
        }
      }
    },
    "/api/recipes": {
      "get": {
        "tags": ["Recipes"],
        "summary": "Tarifleri durum ve sayfalamaya göre listeler",
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["all", "published", "draft"]
            },
            "description": "Tarif durumu"
          },
          {
            "name": "page",
            "in": "query",
            "schema": { "type": "integer" },
            "description": "Sayfa numarası"
          }
        ],
        "responses": {
          "200": {
            "description": "Sayfalanmış tarif listesi",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetAllRecipesResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Recipes"],
        "summary": "Yeni bir tarif oluşturur",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/RecipePayload" }
            }
          }
        },
        "responses": { "201": { "description": "Tarif oluşturuldu" } }
      }
    },
    "/api/recipes/search": {
      "get": {
        "tags": ["Recipes"],
        "summary": "Başlık veya içeriğe göre tarif arar",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "required": true,
            "schema": { "type": "string" },
            "description": "Arama anahtar kelimesi"
          }
        ],
        "responses": { "200": { "description": "Arama sonuçları" } }
      }
    },
    "/api/recipes/trending": {
      "get": {
        "tags": ["Recipes"],
        "summary": "En popüler (trending) tarifleri getirir",
        "responses": { "200": { "description": "Popüler tarifler listesi" } }
      }
    },
    "/api/recipes/tag/{tag}": {
      "get": {
        "tags": ["Recipes"],
        "summary": "Belirli bir etikete sahip tarifleri getirir",
        "parameters": [
          {
            "name": "tag",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": { "200": { "description": "Etikete göre tarifler" } }
      }
    },
    "/api/recipes/{id}": {
      "put": {
        "tags": ["Recipes"],
        "summary": "Bir tarifi günceller",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/RecipePayload" }
            }
          }
        },
        "responses": {
          "200": { "description": "Tarif güncellendi" },
          "403": { "description": "Yetkisiz erişim" },
          "404": { "description": "Tarif bulunamadı" }
        }
      },
      "delete": {
        "tags": ["Recipes"],
        "summary": "Bir tarifi siler",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Tarif silindi" },
          "404": { "description": "Tarif bulunamadı" }
        }
      }
    },
    "/api/recipes/{slug}": {
      "get": {
        "tags": ["Recipes"],
        "summary": "Slug ile tek bir tarif getirir",
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Tarif detayı" },
          "404": { "description": "Tarif bulunamadı" }
        }
      }
    },
    "/api/recipes/{id}/view": {
      "put": {
        "tags": ["Recipes"],
        "summary": "Tarifin görüntülenme sayısını bir artırır",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": { "200": { "description": "Görüntülenme sayısı arttı" } }
      }
    },
    "/api/recipes/{id}/like": {
      "put": {
        "tags": ["Recipes"],
        "summary": "Tarifin beğeni sayısını bir artırır",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": { "200": { "description": "Beğeni eklendi" } }
      }
    },
    "/api/comments": {
      "get": {
        "tags": ["Comments"],
        "summary": "Tüm yorumları iç içe (nested) yapıda getirir",
        "responses": { "200": { "description": "Tüm yorumlar" } }
      }
    },
    "/api/comments/{recipeId}": {
      "post": {
        "tags": ["Comments"],
        "summary": "Bir tarife yeni yorum ekler",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "recipeId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CommentPayload" }
            }
          }
        },
        "responses": {
          "201": { "description": "Yorum eklendi" },
          "404": { "description": "Tarif bulunamadı" }
        }
      },
      "get": {
        "tags": ["Comments"],
        "summary": "Bir tarife ait tüm yorumları getirir",
        "parameters": [
          {
            "name": "recipeId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": { "200": { "description": "Tarife ait yorumlar" } }
      }
    },
    "/api/comments/{commentId}": {
      "delete": {
        "tags": ["Comments"],
        "summary": "Bir yorumu ve altındaki yanıtları siler",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "commentId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Yorum silindi" },
          "404": { "description": "Yorum bulunamadı" }
        }
      }
    },
    "/api/ai/create-recipe": {
      "post": {
        "tags": ["AI"],
        "summary": "Malzemelere göre akıllı ve detaylı tarif oluşturur",
        "description": "useOnlyGivenIngredients bayrağı ile AI'ın davranışını kontrol eder. 'true' ise sadece verilen malzemeleri kullanır, 'false' (veya tanımsız) ise yaratıcı önerilerde bulunabilir.",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AICreateRecipePayload" }
            }
          }
        }
      }
    },
    "/api/ai/auto-fill-steps": {
      "post": {
        "tags": ["AI"],
        "summary": "Başlık ve malzemelere göre tarif adımları oluşturur",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AIFillStepsPayload" }
            }
          }
        },
        "responses": {
          "200": { "description": "Oluşturulan tarif adımları" },
          "400": { "description": "Eksik başlık veya malzeme" }
        }
      }
    },
    "/api/dashboard/summary": {
      "get": {
        "tags": ["Dashboard"],
        "summary": "Yönetim paneli için özet verileri getirir",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Dashboard özeti",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DashboardSummaryResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "name": { "type": "string" },
          "email": { "type": "string" },
          "profileImageUrl": { "type": "string", "nullable": true },
          "bio": { "type": "string" },
          "role": { "type": "string" }
        }
      },
      "UserRegisterPayload": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string" },
          "password": { "type": "string" },
          "profileImageUrl": { "type": "string" },
          "bio": { "type": "string" },
          "adminAccessToken": { "type": "string" }
        }
      },
      "UserLoginPayload": {
        "type": "object",
        "properties": {
          "email": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "Recipe": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "title": { "type": "string" },
          "slug": { "type": "string" },
          "author": { "$ref": "#/components/schemas/User" },
          "ingredients": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "amount": { "type": "string" }
              }
            }
          },
          "dietType": { "type": "string" },
          "duration": { "type": "integer" },
          "steps": { "type": "array", "items": { "type": "string" } },
          "coverImageUrl": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "isDraft": { "type": "boolean" },
          "views": { "type": "integer" },
          "likes": { "type": "integer" },
          "generatedByAI": { "type": "boolean" },
          "createdAt": { "type": "string" },
          "updatedAt": { "type": "string" }
        }
      },
      "RecipePayload": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "ingredients": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "amount": { "type": "string" }
              }
            }
          },
          "dietType": { "type": "string" },
          "duration": { "type": "integer" },
          "steps": { "type": "array", "items": { "type": "string" } },
          "coverImageUrl": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "isDraft": { "type": "boolean" },
          "generatedByAI": { "type": "boolean" }
        }
      },
      "Comment": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "recipe": { "type": "string" },
          "author": { "$ref": "#/components/schemas/User" },
          "content": { "type": "string" },
          "parentComment": { "type": "string", "nullable": true },
          "createdAt": { "type": "string" },
          "replies": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Comment" }
          }
        }
      },
      "CommentPayload": {
        "type": "object",
        "properties": {
          "content": { "type": "string" },
          "parentComment": { "type": "string" }
        }
      },
      "AICreateRecipePayload": {
        "type": "object",
        "properties": {
          "ingredients": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Tarif oluşturmak için kullanılacak malzeme listesi."
          },
          "useOnlyGivenIngredients": {
            "type": "boolean",
            "description": "AI'ın sadece verilen malzemeleri kullanıp kullanmayacağını belirler. Gönderilmezse 'false' kabul edilir.",
            "default": false
          }
        }
      },
      "AIFillStepsPayload": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "ingredients": { "type": "array", "items": { "type": "string" } }
        }
      },
      "GetAllRecipesResponse": {
        "type": "object",
        "properties": {
          "recipes": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Recipe" }
          },
          "page": { "type": "integer" },
          "totalPages": { "type": "integer" },
          "totalCount": { "type": "integer" },
          "counts": {
            "type": "object",
            "properties": {
              "all": { "type": "integer" },
              "published": { "type": "integer" },
              "draft": { "type": "integer" }
            }
          }
        }
      },
      "DashboardSummaryResponse": {
        "type": "object",
        "properties": {
          "stats": {
            "type": "object",
            "properties": {
              "totalRecipes": { "type": "integer" },
              "drafts": { "type": "integer" },
              "published": { "type": "integer" },
              "totalViews": { "type": "integer" },
              "totalLikes": { "type": "integer" },
              "totalComments": { "type": "integer" },
              "aiGenerated": { "type": "integer" }
            }
          },
          "topRecipes": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Recipe" }
          },
          "recentComments": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Comment" }
          },
          "tagUsage": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "tag": { "type": "string" },
                "count": { "type": "integer" }
              }
            }
          }
        }
      }
    }
  }
}
