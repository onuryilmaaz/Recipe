{
  "openapi": "3.0.0",
  "info": {
    "title": "AI Destekli Yemek Tarifi API",
    "version": "1.0.0",
    "description": "MERN stack tabanlı, Google Gemini AI destekli yemek tarifi uygulaması REST API dokümantasyonu."
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/api/auth/register": {
      "post": {
        "summary": "Kullanıcı kaydı",
        "tags": ["Authentication"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterUser"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Kullanıcı başarıyla kaydedildi"
          },
          "400": {
            "description": "Email zaten kayıtlı"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "Kullanıcı girişi",
        "tags": ["Authentication"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginUser"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Giriş başarılı, token döner",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Geçersiz kimlik bilgileri"
          }
        }
      }
    },
    "/api/auth/profile": {
      "get": {
        "summary": "Giriş yapan kullanıcının profil bilgilerini getirir",
        "tags": ["Authentication"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Kullanıcı profili",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserProfile"
                }
              }
            }
          },
          "401": {
            "description": "Yetkisiz"
          }
        }
      }
    },

    "/api/recipes": {
      "get": {
        "summary": "Tüm tarifleri getir",
        "tags": ["Recipes"],
        "parameters": [
          {
            "in": "query",
            "name": "category",
            "schema": { "type": "string" },
            "description": "Kategoriye göre filtre"
          },
          {
            "in": "query",
            "name": "dietType",
            "schema": { "type": "string" },
            "description": "Diyet tipine göre filtre"
          },
          {
            "in": "query",
            "name": "maxDuration",
            "schema": { "type": "integer" },
            "description": "Maksimum hazırlanma süresi (dakika)"
          }
        ],
        "responses": {
          "200": {
            "description": "Tarif listesi",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Recipe" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Yeni tarif oluştur",
        "tags": ["Recipes"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/RecipeCreate" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Tarif oluşturuldu",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Recipe" }
              }
            }
          },
          "401": {
            "description": "Yetkisiz"
          }
        }
      }
    },

    "/api/recipes/{slug}": {
      "get": {
        "summary": "Slug’a göre tarif getir",
        "tags": ["Recipes"],
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Tarif slug’ı"
          }
        ],
        "responses": {
          "200": {
            "description": "Tarif",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Recipe" }
              }
            }
          },
          "404": {
            "description": "Tarif bulunamadı"
          }
        }
      }
    },

    "/api/recipes/{id}": {
      "put": {
        "summary": "Tarifi güncelle",
        "tags": ["Recipes"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Tarif ID’si"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/RecipeUpdate" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Tarif güncellendi",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Recipe" }
              }
            }
          },
          "401": { "description": "Yetkisiz" },
          "404": { "description": "Tarif bulunamadı" }
        }
      },
      "delete": {
        "summary": "Tarifi sil",
        "tags": ["Recipes"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Tarif ID’si"
          }
        ],
        "responses": {
          "200": { "description": "Tarif silindi" },
          "401": { "description": "Yetkisiz" },
          "404": { "description": "Tarif bulunamadı" }
        }
      }
    },

    "/api/comments/{recipeId}": {
      "get": {
        "summary": "Bir tarife ait yorumları getir",
        "tags": ["Comments"],
        "parameters": [
          {
            "name": "recipeId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Tarif ID’si"
          }
        ],
        "responses": {
          "200": {
            "description": "Yorum listesi",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Comment" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Tarife yorum ekle",
        "tags": ["Comments"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "recipeId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Tarif ID’si"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CommentCreate" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Yorum eklendi",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Comment" }
              }
            }
          },
          "401": {
            "description": "Yetkisiz"
          }
        }
      }
    },

    "/api/comments/{commentId}": {
      "delete": {
        "summary": "Yorumu sil",
        "tags": ["Comments"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "commentId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Yorum ID’si"
          }
        ],
        "responses": {
          "200": { "description": "Yorum silindi" },
          "401": { "description": "Yetkisiz" },
          "404": { "description": "Yorum bulunamadı" }
        }
      }
    },

    "/api/likes/{recipeId}": {
      "post": {
        "summary": "Bir tarife beğeni ekle veya kaldır",
        "tags": ["Likes"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "recipeId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Tarif ID’si"
          }
        ],
        "responses": {
          "200": { "description": "Beğeni güncellendi" },
          "401": { "description": "Yetkisiz" }
        }
      },
      "get": {
        "summary": "Bir tarifin beğeni sayısını getir",
        "tags": ["Likes"],
        "parameters": [
          {
            "name": "recipeId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Tarif ID’si"
          }
        ],
        "responses": {
          "200": {
            "description": "Beğeni sayısı",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "likesCount": { "type": "integer", "example": 12 }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/api/ai/suggest-recipe": {
      "post": {
        "summary": "Malzemeye göre tarif önerisi yapar",
        "tags": ["AI"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SuggestRecipe"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Tarif önerisi (Başlık ve malzeme listesi)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RecipeSuggestion"
                }
              }
            }
          }
        }
      }
    },

    "/api/ai/auto-fill-steps": {
      "post": {
        "summary": "Tarif başlığı ve malzemeye göre hazırlanma adımlarını oluşturur",
        "tags": ["AI"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/FillSteps"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Hazırlanma adımları listesi",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StepsResponse"
                }
              }
            }
          }
        }
      }
    },

    "/api/ai/generate-complete-recipe": {
      "post": {
        "summary": "Malzemeye göre tam kapsamlı tarif oluşturur (kategori, diyet tipi, süre, resim dahil)",
        "tags": ["AI"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GenerateCompleteRecipe"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Tam kapsamlı tarif bilgileri",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CompleteRecipeResponse"
                }
              }
            }
          },
          "400": {
            "description": "Geçersiz malzeme listesi"
          },
          "500": {
            "description": "AI servisi kullanılamıyor"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "RegisterUser": {
        "type": "object",
        "required": ["username", "email", "password"],
        "properties": {
          "username": { "type": "string", "example": "onuryilmaz" },
          "email": {
            "type": "string",
            "format": "email",
            "example": "onur@example.com"
          },
          "password": { "type": "string", "example": "12345678" }
        }
      },
      "LoginUser": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "onur@example.com"
          },
          "password": { "type": "string", "example": "12345678" }
        }
      },
      "UserProfile": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "example": "64a4d2b4e62f3a0012345678" },
          "username": { "type": "string", "example": "onuryilmaz" },
          "email": {
            "type": "string",
            "format": "email",
            "example": "onur@example.com"
          },
          "avatar": { "type": "string", "nullable": true }
        }
      },
      "Recipe": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "example": "64a4d2b4e62f3a0012345678" },
          "authorId": { "type": "string" },
          "title": { "type": "string", "example": "Kabak Mücveri" },
          "slug": { "type": "string", "example": "kabak-mucveri" },
          "category": { "type": "string", "example": "Ana Yemek" },
          "dietType": { "type": "string", "example": "Vejetaryen" },
          "duration": { "type": "integer", "example": 30 },
          "imageUrl": { "type": "string", "nullable": true },
          "ingredients": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string", "example": "Kabak" },
                "amount": { "type": "string", "example": "3 adet" }
              }
            }
          },
          "steps": {
            "type": "array",
            "items": { "type": "string", "example": "Kabakları rendeleyin." }
          },
          "likesCount": { "type": "integer", "example": 10 }
        }
      },
      "RecipeCreate": {
        "type": "object",
        "required": ["title", "ingredients", "steps"],
        "properties": {
          "title": { "type": "string", "example": "Kabak Mücveri" },
          "category": { "type": "string", "example": "Ana Yemek" },
          "dietType": { "type": "string", "example": "Vejetaryen" },
          "duration": { "type": "integer", "example": 30 },
          "imageUrl": { "type": "string", "nullable": true },
          "ingredients": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string", "example": "Kabak" },
                "amount": { "type": "string", "example": "3 adet" }
              }
            }
          },
          "steps": {
            "type": "array",
            "items": { "type": "string", "example": "Kabakları rendeleyin." }
          }
        }
      },
      "RecipeUpdate": {
        "type": "object",
        "properties": {
          "title": { "type": "string", "example": "Kabak Mücveri" },
          "category": { "type": "string", "example": "Ana Yemek" },
          "dietType": { "type": "string", "example": "Vejetaryen" },
          "duration": { "type": "integer", "example": 30 },
          "imageUrl": { "type": "string", "nullable": true },
          "ingredients": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string", "example": "Kabak" },
                "amount": { "type": "string", "example": "3 adet" }
              }
            }
          },
          "steps": {
            "type": "array",
            "items": { "type": "string", "example": "Kabakları rendeleyin." }
          }
        }
      },
      "Comment": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "recipeId": { "type": "string" },
          "userId": { "type": "string" },
          "text": {
            "type": "string",
            "example": "Çok güzel bir tarif, teşekkürler!"
          },
          "username": { "type": "string", "example": "onuryilmaz" },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      },
      "CommentCreate": {
        "type": "object",
        "required": ["text"],
        "properties": {
          "text": {
            "type": "string",
            "example": "Çok güzel bir tarif, teşekkürler!"
          }
        }
      },
      "SuggestRecipe": {
        "type": "object",
        "required": ["ingredients"],
        "properties": {
          "ingredients": {
            "type": "array",
            "items": { "type": "string" },
            "example": ["domates", "peynir", "maydanoz"]
          },
          "dietType": { "type": "string", "example": "Vejetaryen" },
          "maxDuration": { "type": "integer", "example": 45 }
        }
      },
      "RecipeSuggestion": {
        "type": "object",
        "properties": {
          "title": { "type": "string", "example": "Fırında Sebzeli Makarna" },
          "ingredients": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      },
      "FillSteps": {
        "type": "object",
        "required": ["title", "ingredients"],
        "properties": {
          "title": { "type": "string", "example": "Fırında Sebzeli Makarna" },
          "ingredients": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      },
      "StepsResponse": {
        "type": "object",
        "properties": {
          "steps": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "Fırını 180 dereceye ısıtın."
            }
          }
        }
      },
      "GenerateCompleteRecipe": {
        "type": "object",
        "required": ["ingredients"],
        "properties": {
          "ingredients": {
            "type": "array",
            "items": { "type": "string" },
            "example": ["chicken", "tomato", "onion", "garlic"]
          }
        }
      },
      "CompleteRecipeResponse": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "Simple Tomato Chicken"
          },
          "category": {
            "type": "string",
            "enum": ["breakfast", "lunch", "dinner", "dessert", "snack", "appetizer"],
            "example": "dinner"
          },
          "dietType": {
            "type": "string",
            "enum": ["vegetarian", "vegan", "gluten-free", "keto", "low-carb", "regular"],
            "example": "regular"
          },
          "duration": {
            "type": "integer",
            "example": 40
          },
          "ingredients": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string", "example": "Chicken breast" },
                "amount": { "type": "string", "example": "2 (6 oz each)" }
              }
            }
          },
          "steps": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "Preheat oven to 375°F (190°C)."
            }
          },
          "imageUrl": {
            "type": "string",
            "example": "https://images.unsplash.com/photo-1565299624946-b28f40a0ca4b?w=400&h=300&fit=crop&crop=food"
          }
        }
      }
    }
  }
}
